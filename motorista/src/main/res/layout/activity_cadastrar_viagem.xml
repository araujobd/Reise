<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.TextInputLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="65dp">

        <EditText
            android:id="@+id/et_origem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="18dp"
            android:hint="Origem" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="137dp">

        <EditText
            android:id="@+id/et_destino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="18dp"
            android:hint="Destino" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="212dp">

        <EditText
            android:id="@+id/et_preco"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="18dp"
            android:ems="10"
            android:hint="Preço"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Horário"
            android:layout_weight="0.17" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tv_frequencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequência"
        android:textSize="28sp"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="292dp" />

    <GridLayout
        android:id="@+id/grid_frequencia"
        android:layout_width="368dp"
        android:layout_height="67dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="333dp">

        <Button
            android:id="@+id/bt_dom"
            style="@android:style/Widget.Button.Transparent"
            android:layout_width="52dp"
            android:layout_height="54dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:text="D"
            android:textSize="22sp" />

        <Button
            android:id="@+id/bt_seg"
            style="@android:style/Widget.Button.Transparent"
            android:layout_width="52dp"
            android:layout_height="54dp"
            android:layout_marginTop="10dp"
            android:text="S"
            android:textSize="22sp" />

        <Button
            android:id="@+id/bt_ter"
            style="@android:style/Widget.Button.Transparent"
            android:layout_width="52dp"
            android:layout_height="54dp"
            android:layout_marginTop="10dp"
            android:text="T"
            android:textSize="22sp" />

        <Button
            android:id="@+id/bt_qua"
            style="@android:style/Widget.Button.Transparent"
            android:layout_width="52dp"
            android:layout_height="54dp"
            android:layout_marginTop="10dp"
            android:text="Q"
            android:textSize="22sp" />

        <Button
            android:id="@+id/bt_qui"
            style="@android:style/Widget.Button.Transparent"
            android:layout_width="52dp"
            android:layout_height="54dp"
            android:layout_marginTop="10dp"
            android:text="Q"
            android:textSize="22sp" />

        <Button
            android:id="@+id/bt_sex"
            style="@android:style/Widget.Button.Transparent"
            android:layout_width="52dp"
            android:layout_height="54dp"
            android:layout_marginTop="10dp"
            android:text="S"
            android:textSize="22sp" />

        <Button
            android:id="@+id/bt_sab"
            style="@android:style/Widget.Button.Transparent"
            android:layout_width="52dp"
            android:layout_height="54dp"
            android:layout_marginTop="10dp"
            android:text="S"
            android:textSize="22sp" />

    </GridLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTintMode="@color/"
        app:srcCompat="@android:drawable/ic_media_play"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="65dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_play"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="212dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_play"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="137dp" />

    <Button
        android:id="@+id/bt_salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="434dp" />


</android.support.constraint.ConstraintLayout>
