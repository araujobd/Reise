<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view_pas"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:elevation="0dp"
        android:layerType="none"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_origem_pas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_my_location"
                android:tint="@color/background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_origem_pas"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="origem"
                android:textSize="20sp"
                app:layout_constraintLeft_toRightOf="@+id/img_origem_pas"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_destino_pas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_location"
                android:tint="@color/background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_origem_pas" />

            <TextView
                android:id="@+id/tv_destino_pas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="16dp"
                android:text="destino"
                android:textSize="20sp"
                app:layout_constraintLeft_toRightOf="@+id/img_destino_pas"
                app:layout_constraintTop_toBottomOf="@+id/tv_origem_pas" />

            <ImageView
                android:id="@+id/img_hr_pas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_location"
                android:tint="@color/background"
                app:layout_constraintEnd_toStartOf="@+id/tv_horario_pas"
                app:layout_constraintTop_toBottomOf="@+id/tv_rs_pas" />

            <TextView
                android:id="@+id/tv_horario_pas"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                android:text="horÃ¡rio"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_preco_pas" />

            <TextView
                android:id="@+id/tv_rs_pas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                android:text="R$"
                android:textSize="18sp"
                app:layout_constraintRight_toLeftOf="@+id/tv_preco_pas"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_preco_pas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preco"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" />

            <ImageView
                android:id="@+id/img_dia_pas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_date"
                android:tint="@color/background"
                app:layout_constraintEnd_toStartOf="@+id/tv_dia_pas"
                app:layout_constraintTop_toBottomOf="@+id/img_hr_pas" />

            <TextView
                android:id="@+id/tv_dia_pas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                android:text="dia"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_horario_pas" />

            <Button
                android:id="@+id/bt_remover"
                android:layout_width="355dp"
                android:layout_height="61dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Remover"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>