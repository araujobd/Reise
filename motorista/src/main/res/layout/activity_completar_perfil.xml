<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/img_pessoa"
        android:layout_height="232dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/com_facebook_profile_picture_blank_portrait"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_foto"
        android:src="@android:drawable/ic_menu_camera"
        app:fabSize="mini"
        app:layout_constraintTop_toBottomOf="@+id/img_pessoa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/img_pessoa"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        style="@style/FATButton" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_celular"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/img_pessoa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/InputTIL" >

        <EditText
            android:id="@+id/ed_celular"
            android:inputType="numberDecimal"
            android:maxLength="11"
            android:hint="@string/celular"
            style="@style/EditText" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_endereco"
        app:layout_constraintTop_toBottomOf="@+id/til_celular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/InputTIL" >

        <EditText
            android:id="@+id/ed_endereco"
            android:hint="@string/endereco"
            style="@style/EditText" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_descricao"
        app:layout_constraintTop_toBottomOf="@+id/til_endereco"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/InputTIL">

        <EditText
            android:id="@+id/ed_descricao"
            android:hint="@string/descricao"
            style="@style/EditText" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_proximo"
        android:layout_marginBottom="8dp"
        android:src="@android:drawable/ic_menu_send"
        app:layout_constraintTop_toBottomOf="@+id/til_descricao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0"
        style="@style/FATButton" />

</android.support.constraint.ConstraintLayout>