<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view_pas"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:elevation="0dp"
        android:layerType="none"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_saida_pas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saída:"
                android:textSize="22sp"
                android:layout_marginLeft="6dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_origem_pas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="origem"
                android:textSize="20sp"
                app:layout_constraintLeft_toRightOf="@+id/tv_saida_pas"
                android:layout_marginLeft="5dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_dest_pas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destino:"
                android:textSize="22sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="6dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/tv_destino_pas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="destino"
                android:textSize="20sp"
                app:layout_constraintLeft_toRightOf="@+id/tv_dest_pas"
                android:layout_marginLeft="5dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="40dp" />

            <TextView
                android:id="@+id/tv_horario_pas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="horário"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="71dp"
                app:layout_constraintLeft_toRightOf="@+id/tv_hr_pas"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/tv_preco_pas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preco"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tv_rs_pas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintRight_toLeftOf="@+id/tv_preco_pas"
                android:layout_marginRight="2dp" />

            <TextView
                android:id="@+id/tv_hr_pas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horário:"
                android:textSize="22sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="71dp"
                android:layout_marginLeft="6dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/tv_dia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dia:"
                android:textSize="22sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="6dp"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/tv_dia_pas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dia"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="101dp"
                app:layout_constraintLeft_toRightOf="@+id/tv_dia"
                android:layout_marginLeft="5dp" />

            <Button
                android:id="@+id/bt_remover"
                android:layout_width="355dp"
                android:layout_height="61dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Remover"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>